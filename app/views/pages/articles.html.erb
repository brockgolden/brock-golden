<% provide :title, "Articles" %>
<% provide :meta_description, "A collection of articles penned by Brock Golden. Read my published works on music blogs like EARMILK and watch me rant and rave independently on Medium." %>
<div class="row">
	<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1" id="posts-container">
		<% @posts.each do |p| %>
			<%= render partial: "posts/post_preview", locals: { post: p } %>
		<% end %>
		<% will_paginate @posts %>
	<div>
</div>
