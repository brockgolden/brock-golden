<div class="col-md-6 col-md-offset-3">
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image_url %>
      <%= f.text_field :image_url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :youtube_url %>
      <%= f.text_field :youtube_url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :soundcloud_id %>
      <%= f.text_field :soundcloud_id, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, cols: 20, rows: 20, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :blog %>
      <%= f.check_box :blog, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :music %>
      <%= f.check_box :music, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :articles %>
      <%= f.check_box :articles, class: "form-control" %>
    </div>


    <div class="actions">
      <%= f.submit class: "form-control" %>
    </div>
  <% end %>
</div>